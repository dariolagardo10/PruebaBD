<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!--
 <ImageView
     android:layout_width="120dp"
     android:layout_height="120dp"
     android:src="@drawable/posadas_logo"
     android:layout_gravity="center"
     android:layout_marginBottom="24dp"
     android:contentDescription="Logo de Posadas" />
 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar sesi칩n / Registrarse"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#006B3F"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de Usuario"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar sesi칩n"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:minHeight="56dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonShowRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textColor="#006B3F"
            android:background="@drawable/button_outline_background"
            android:minHeight="56dp"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:id="@+id/layoutRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/editTextNewUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nuevo Nombre de Usuario"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nueva Contrase침a"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextNewNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextNewApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellido"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTextNewLegajo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Legajo"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completar Registro"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:minHeight="56dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="#006B3F"/>

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#006B3F"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>